 <link rel='stylesheet' href='/stylesheets/style1.css' />
 <div class= "container">
<!-- cart items details -->
<div class="small-container cart-page">
    <table>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
         </tr>
        {{# each products}}
            {{# each this}}
                <tr>
                <td>
                    <div class="cart-info">
                        <img src="{{this.item.listImg.[0]}}" alt="">
                        <div>
                            <p>{{this.item.name}}</p>
                            
                            <small>Loại: {{this.variaty}}</small>
                            </br>
                            <small>Đơn giá: ₫{{this.item.price}}</small>
                            <br>    
                            <a href="/remove/{{this.item._id}}?variaty={{this.variaty}}">Xóa</a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="box-quantity shopee-input-quantity">
                                    <a href="/reduce/{{this.item._id}}?variaty={{this.variaty}}">
                                    <button class="style-button-quantity" id="decrease">
                                    <svg enable-background="new 0 0 10 10" viewBox="0 0 10 10" x="0" y="0" class="shopee-svg-icon ">
                                    <polygon points="4.5 4.5 3.5 4.5 0 4.5 0 5.5 3.5 5.5 4.5 5.5 10 5.5 10 4.5"></polygon>
                                    </svg>
                                    </button>
                                    </a>
                                    <input id="input-quantity" class="style-input-quantity style-button-quantity" type="text" value="{{this.quantity}}">
                                    <a href="/add/{{this.item._id}}?variaty={{this.variaty}}">
                                    <button class="style-button-quantity" id="increase">
                                        <svg enable-background="new 0 0 10 10" viewBox="0 0 10 10" x="0" y="0" class="shopee-svg-icon icon-plus-sign">
                                    <polygon points="10 4.5 5.5 4.5 5.5 0 4.5 0 4.5 4.5 0 4.5 0 5.5 4.5 5.5 4.5 10 5.5 10 5.5 5.5 10 5.5"></polygon>
                                    </a>
                            </svg>
                        </button>
                    </div>
                </td>
                <td>₫{{this.price}}</td>
            </tr>
            {{/each}}
        {{/each}}
    </table>
    <div class="total-price">
        <table>
            <tr>
                <td>Tổng thanh toán</td>
                <td>₫{{totalOrder}}</td>
            </tr>
            <tr>
                <td>VAT(10%)</td>
                <td>₫{{vat}}</td>
            </tr>
            <tr>
                <td>Tổng tiền</td>
                <td>₫{{totalPrice}}</td>
            </tr>
            <style>
                a{
                    text-decoration: none !important;;
                }
                .button {
                padding: 15px 15px;
                font-size: 20px;
                text-align: center;
                cursor: pointer;
                outline: none;
                color: #fff;
                background-color: #ff523b;
                border: none;
                border-radius: 15px;
                box-shadow: 0 3px rgb(192, 176, 168);
                }

                .button:hover {background-color: #ff733c}

                .button:active {
                background-color: #ff5b19;
                box-shadow: 0 2px #666;
                transform: translateY(4px);
                }
            </style>
            <tr>
                <td style="width: 100%; padding:0;"><a href="/payment/{{cartId}}?totalPayment={{totalPayment}}" role="button" class="button">Thanh toán</a></td>
            </tr>
        </table>
    </div>
</div>
